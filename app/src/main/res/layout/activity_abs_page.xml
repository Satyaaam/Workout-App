<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abs_page"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/abs_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/abs_image_part2"
                android:layout_marginTop="-50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 min    5 workouts"
                android:fontFamily="@font/staatliches"
                android:textSize="25sp"
                android:layout_marginTop="-25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/ll_jumping_jack_beginner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:background="@drawable/workout_drawable_file">
                <TextView
                    android:drawableLeft="@drawable/baseline_menu_24"
                    android:drawablePadding="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumping jacks"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:fontFamily="@font/staatliches"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:20"
                    android:fontFamily="@font/staatliches"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_abdominal_crunches_beginner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/workout_drawable_file">
                <TextView
                    android:drawableLeft="@drawable/baseline_menu_24"
                    android:drawablePadding="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdominal Crunches"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:fontFamily="@font/staatliches"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X16"
                    android:fontFamily="@font/staatliches"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_russian_twist_beginner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/workout_drawable_file">
                <TextView
                    android:drawableLeft="@drawable/baseline_menu_24"
                    android:drawablePadding="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Russian twist"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:fontFamily="@font/staatliches"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X20"
                    android:fontFamily="@font/staatliches"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mountain_climber_beginner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/workout_drawable_file">
                <TextView
                    android:drawableLeft="@drawable/baseline_menu_24"
                    android:drawablePadding="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mountain climber"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:fontFamily="@font/staatliches"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X16"
                    android:fontFamily="@font/staatliches"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hell_touch_beginner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/workout_drawable_file">
                <TextView
                    android:drawableLeft="@drawable/baseline_menu_24"
                    android:drawablePadding="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hell touch"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:fontFamily="@font/staatliches"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X20"
                    android:fontFamily="@font/staatliches"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>