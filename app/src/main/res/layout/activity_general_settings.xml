<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".generalSettings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Settings"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:background="@drawable/tv_border"
        android:textColor="#000"
        android:fontFamily="@font/staatliches"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remind me to Workout daily"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/metrics_amp_impoerial_units"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep the Screen On"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />


</LinearLayout>