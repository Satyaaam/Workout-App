<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".what_holds_you_back"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/what_holds_you_back"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="what holds you back from working out?"
        android:fontFamily="@font/staatliches"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/if_we_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if we know your challenges, we can help you overcome them"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <CheckBox
        android:id="@+id/busy_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busy schedule"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/not_enough_confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="not enough confidence"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/missing_support_from_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="missing support from other"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/not_enough_motivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="not enought motivation"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/u_are_shy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are shy"
        android:fontFamily="@font/staatliches"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_continue_ur_challenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="continue"
        android:textColor="@color/black"
        android:background="#00000000"
        android:layout_marginTop="30dp"
        android:textAlignment="textStart"
        android:textSize="25sp"
        android:drawableRight="@drawable/_my_right_arrow"
        android:fontFamily="@font/staatliches"/>


</LinearLayout>