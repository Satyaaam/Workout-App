<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ui.login.WorkoutSettings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/workout_settings"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:background="@drawable/tv_border"
        android:textColor="#000"
        android:fontFamily="@font/staatliches"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/workout_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gender"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/training_rest"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coutdown_time"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sound_option"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/restart_progress"
        android:padding="20dp"
        android:shadowColor="#000"
        android:drawablePadding="15dp"
        android:fontFamily="@font/staatliches"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        app:drawableLeftCompat="@drawable/baseline_menu_24" />

</LinearLayout>